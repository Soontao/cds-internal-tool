{
  "compilerOptions": {
    "newLine": "lf",
    "target": "ES2021",
    "module": "CommonJS",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "lib": [
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019"
    ]
  }
}
